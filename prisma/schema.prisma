// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario{
  idUsuario Int @id
  nome String
  email String
  indentleilao Leilao @relation(fields: [idleilao], references: [indentificacao])
  idleilao Int
  lance Lance[]
}

model Leilao{
  indentificacao Int @id
  produto String
  preco Float
  datalimite String
  dono Usuario[]
  listadelances String
  lance Lance[]
}

model Lance{
  lenceleilao Int @id
  comprador Usuario @relation(fields: [iduser], references: [idUsuario])
  iduser Int
  leilao Leilao @relation(fields: [idleilao], references: [indentificacao])
  idleilao Int
  valor Float
}
